<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffc617">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="16dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/common_toast_icon"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_marginLeft="16dp"
            android:paddingTop="6dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/item_toast_icon"/>

        <TextView
            android:id="@+id/common_toast_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#ffffff"
            android:layout_toRightOf="@+id/common_toast_icon"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:paddingTop="6dp"
            android:layout_centerVertical="true"
            android:layout_alignBaseline="@+id/common_toast_icon"
            android:text="load_default_display_text"/>

    </RelativeLayout>
</FrameLayout>